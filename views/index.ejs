<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <ul>
        <% messages.forEach(function(message) { %>
            <li>
                <h2><%= message.user %></h2>
                <strong><%= message.text %></strong>
                (<%= message.added.toLocaleString() %>)
            </li>
        <% }) %>
    </ul>
    <a href="/new">Add a new Message</a>
</body>
</html>